---
const { img, quote, author } = Astro.props;
---

<span class="quote-container">
  <div class="circle-image">
    <img src={img ?? "/default/path/to/image.jpg"} alt="Circular Image" />
  </div>
  <div class="quote-text">
    <div class="main-quote">"{quote ?? "Default quote text."}"</div>
    <div class="sub-heading">- {author ?? "Default author"}</div>
  </div>
</span>


  
    <style>
      .quote-container {
        max-width: 200px;
    height: 400px;
   
    background-color: #2b2b2b47;
    border-radius: 20px;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    padding: 10px;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
      }
      .circle-image {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        overflow: hidden;
        margin-right: 20px;
      }
      .circle-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .quote-text {
        flex: 1;
      }
      .main-quote {
        font-size: 16px;
        font-weight: bold;
      }
      .sub-heading {
        font-size: 12px;
        font-weight: normal;
        color: #e0e6e9;
        margin-top: 10px;
      }
    </style>

  
  


