---
import type {
  NavGroup as NavGroupType,
  NavLink as NavLinkType,
} from "../../consts";
import NavLink from "./NavLink.astro";



type Props = NavLinkType | NavGroupType;

const { text, children, link } = Astro.props;
---

  
<div class="nav-group">
  <h2 class="nav-group-title">{text}</h2>

  <ul>
      {
        children?.map((child: astroHTML.JSX.IntrinsicAttributes) =>
          "children" in child ? (
            <Astro.self {...child} />
          ) : (
            <NavLink text={child.text} link={child.link} /> 
            
          )
        )
      }
  </ul>

</div>

<style>
  .nav-group-title {
    font-size: 1rem;
    font-weight: 700;
    padding: 0.1rem 1rem;
    color: rgb(85, 85, 85);
    text-transform: uppercase;
    margin: 1rem 0 0.25rem 1rem;
  }

  .nav-group > ul > .nav-group {
    margin-left: 0.5rem;
    cursor: pointer;
   
  }



</style>


