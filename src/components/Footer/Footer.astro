---
import AvatarList from "./AvatarList.astro";
type Props = {
	path: string;
};
const { path } = Astro.props;

import { Icon } from "astro-icon";
---

<footer>
	
	<a class="twitch" href="https://twitch.tv/TerrierDarts" target="_blank"><Icon class="twitch" style="align-items: center;" name="mdi:twitch"/></a>

	<a class="youtube" href="https://youtube.com/TerrierDarts" target="_blank"><Icon class="youtube" name="mdi:youtube" /></a>
	
	<a class="twitter" href="https://twitter.com/TerrierDarts" target="_blank"><Icon class="twitter" name="mdi:twitter" /></a>

	<a class="github" href="https://github.com/TerrierDarts" target="_blank"><Icon class="github" name="mdi:github" /></a>

	<a class="kofi" href="https://ko-fi.com/TerrierDarts" target="_blank"><Icon class="kofi" name="simple-icons:kofi" /></a>

	<a class="patreon" href="https://patreon.com/TerrierDarts" target="_blank"><Icon class="patreon" name="mdi:patreon" /></a>
	
</footer>

<style>
	footer {
	margin-top: auto;
	padding: 2rem;
    font-size: 25px;
    border-top: 2px solid var(--theme-divider);
    display: flex;
    align-content: flex-start;
    align-items: stretch;
    justify-content: space-evenly;
	}
	a:hover {
		color: rgb(255, 238, 0);
		background-color: transparent;
		text-decoration: underline;
	}
	

	.twitch {
		color: blueviolet;
		height: 50px;
	}
	.youtube {
		color: red;
		height: 50px;
	}
	.twitter {
		color: skyblue;
		height: 50px;
	}
	.github {
		color: whitesmoke;
		height: 50px;
	}
	.kofi {
		color: pink;
		height: 50px;
	}
	.patreon {
		color: orangered;
		height: 50px;
	}
</style>
